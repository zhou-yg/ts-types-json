{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2016",
    "useDefineForClassFields": false,
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "jsxFactory": "h"
  },
  "include": [
    "src/*.ts",
    "node_modules/@types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}